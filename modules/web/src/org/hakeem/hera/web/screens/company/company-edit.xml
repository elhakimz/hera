<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://companyEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.company">
    <data>
        <instance id="companyDc"
                  class="org.hakeem.hera.entity.hr.Company">
            <view extends="_local">
                <property name="party" view="party-view"/>
                <property name="parentCompany" view="company-view"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="companyDc">
            <column width="350px">
                <pickerField id="partyField" property="party" caption="Organization">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="parentCompanyField" property="parentCompany" caption="ParentCompany">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField property="description"/>
                <dateField id="fromDateField" property="fromDate"/>
                <dateField id="thruDateField" property="thruDate"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
