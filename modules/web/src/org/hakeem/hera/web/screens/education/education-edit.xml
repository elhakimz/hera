<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://educationEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.education">
    <data>
        <instance id="educationDc"
                  class="org.hakeem.hera.entity.qualification.Education">
            <view extends="_local">
                <property name="person" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="educationDc">
            <column width="350px">
                <pickerField id="personField" property="person">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="nameField" property="name"/>
                <textField id="descriptionField" property="description"/>
                <dateField id="fromDateField" property="fromDate"/>
                <dateField id="toDateField" property="toDate"/>
                <lookupField id="qualificationTypeField" property="qualificationType"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
