<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://bankEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.bank">
    <data >
        <instance id="bankDc"
                  class="org.hakeem.hera.entity.finance.Bank">
            <view extends="_local">
                <property name="name"/>
                <property name="organization" view="_minimal"/>
                <property name="bankAccounts" view="_minimal">
                    <property name="party" view="_minimal"/>
                    <property name="currency" view="_minimal"/>
                    <property name="accountNumbers" view="_minimal"/>
                </property>
            </view>
            <loader/>
            <collection id="bankAccountsDc" property="bankAccounts"/>
        </instance>
            <collection id="bankAccountNumbersDc" class="org.hakeem.hera.entity.finance.BankAccountNumber">
                <loader id="bankAccountNumbersDl">
                    <query>
                        select e from hera_BankAccountNumber e
                    </query>
                </loader>
            </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="bankDc">
            <column width="350px">
                <pickerField id="organizationField" property="organization">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="bicField" property="bic"/>
            </column>
        </form>
        <groupBox id="bankAccountsBox" caption="msg://org.hakeem.hera.entity.finance/Bank.bankAccounts">
            <vbox>
                <table id="bankAccountsTable" dataContainer="bankAccountsDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create">
                          <properties>
                              <property name="openMode" value="DIALOG"/>
                          </properties>
                        </action>
                        <action id="edit" type="edit">
                            <properties>
                                <property name="openMode" value="DIALOG"/>
                            </properties>
                        </action>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="party"/>
                        <column id="currency"/>
                    </columns>
                    <buttonsPanel>
                        <button action="bankAccountsTable.create"/>
                        <button action="bankAccountsTable.edit"/>
                        <button action="bankAccountsTable.remove"/>
                    </buttonsPanel>
                </table>

                <groupBox caption="Bank Account Numbers">
                    <table id="bankAccountNumbersTable" dataContainer="bankAccountNumbersDc" width="100%" height="200px"
                           enable="false" editable="true">
                        <actions>
                            <action id="create" type="create"  shortcut="CTRL-ALT-N"/>
                        </actions>
                        <columns>
                            <column id="numberType" editable="true"/>
                            <column id="accountNo" editable="true"/>
                            <column id="expireDate" editable="true"/>
                            <column id="isActive" editable="true"/>
                        </columns>
                        <rows/>
                    </table>
                </groupBox>
            </vbox>

        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
