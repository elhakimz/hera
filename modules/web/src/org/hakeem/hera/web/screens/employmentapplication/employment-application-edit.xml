<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://employmentApplicationEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.employmentapplication">
    <data>
        <instance id="employmentApplicationDc"
                  class="org.hakeem.hera.entity.hr.EmploymentApplication">
            <view extends="_local">
                <property name="position" view="position-view"/>
                <property name="fromPerson" view="_minimal"/>
                <property name="referPerson" view="_minimal"/>
                <property name="sourceType" view="_minimal"/>
                <property name="steps" view="_minimal">
                    <property name="stepDate"/>
                    <property name="description"/>
                </property>
            </view>
            <loader/>
            <collection id="stepsDc" property="steps"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="employmentApplicationDc">
            <column width="350px">
                <textField id="codeField" property="code"/>
                <dateField id="applyDateField" property="applyDate"/>
                <pickerField id="positionField" property="position">
                    <actions>
                        <action id="lookup" type="picker_lookup">
                           <properties>
                               <property name="openMode" value="DIALOG"/>
                           </properties>
                        </action>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="fromPersonField" property="fromPerson">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="referPersonField" property="referPerson">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="sourceTypeField" property="sourceType">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textArea id="descriptionField" property="description"/>
                <textField id="processStateField" property="processState" editable="false"/>
                <dateField id="processDateField" property="processDate" editable="false"/>
            </column>
        </form>
        <groupBox id="stepsBox" caption="msg://org.hakeem.hera.entity.hr/EmploymentApplication.steps">
            <table id="stepsTable" dataContainer="stepsDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="stepDate"/>
                    <column id="employmentApplyStepType"/>
                    <column id="description"/>
                </columns>
                <buttonsPanel>
                    <button action="stepsTable.create"/>
                    <button action="stepsTable.edit"/>
                    <button action="stepsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
