<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://employmentApplicationBrowse.caption"
        focusComponent="employmentApplicationsTable"
        messagesPack="org.hakeem.hera.web.screens.employmentapplication">
    <data readOnly="true">
        <collection id="employmentApplicationsDc"
                    class="org.hakeem.hera.entity.hr.EmploymentApplication">
            <view extends="_local">
                <property name="position" view="position-min-view"/>
                <property name="fromPerson" view="_minimal"/>
            </view>
            <loader id="employmentApplicationsDl">
                <query>
                    <![CDATA[select e from hera_EmploymentApplication e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="employmentApplicationsTable"
            spacing="true">
        <filter id="filter"
                applyTo="employmentApplicationsTable"
                dataLoader="employmentApplicationsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="employmentApplicationsTable"
                    width="100%"
                    dataContainer="employmentApplicationsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="code"/>
                <column id="applyDate"/>
                <column id="position"/>
                <column id="fromPerson"/>
                <column id="description"/>
                <column id="processState"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="applicantBtn" caption="Create Applicant" />
                <button id="editBtn" action="employmentApplicationsTable.edit"/>
                <button id="removeBtn" action="employmentApplicationsTable.remove"/>
                <label value="|"/>

            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
