<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://employmentEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.employment">
    <data>
        <instance id="employmentDc"
                  class="org.hakeem.hera.entity.hr.Employment">
            <view extends="employment-view"/>
            <collection id="agreementsDc" property="agreements"/>

            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="employmentDc">
            <column width="350px">
                <pickerField id="fromPartyRoleField" property="fromPartyRole" caption="Employee">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="toPartyRoleField" property="toPartyRole" caption="Company">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <dateField id="fromDateField" property="fromDate"/>
                <dateField id="thruDateField" property="thruDate"/>
            </column>
        </form>
        <groupBox caption="Agreements">
            <table id="agreementsTable"
                        width="100%"
                        dataContainer="agreementsDc">
                <actions>
                    <action id="create" type="create">
                        <properties>
                            <property name="openMode" value="DIALOG"/>
                        </properties>
                    </action>
                    <action id="edit" type="edit">
                        <properties>
                            <property name="openMode" value="DIALOG"/>
                        </properties>
                    </action>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="code"/>
                    <column id="agreementDate"/>
                    <column id="fromDate"/>
                    <column id="thruDate"/>
                    <column id="description"/>
                    <column id="agreementType"/>
                </columns>
                <rowsCount/>
                <buttonsPanel id="buttonsPanel"
                              alwaysVisible="true">
                    <button id="createBtn" action="agreementsTable.create"/>
                    <button id="editBtn" action="agreementsTable.edit"/>
                    <button id="removeBtn" action="agreementsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>

        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
