<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://partyContactBrowse.caption"
        focusComponent="partyContactsTable"
        messagesPack="org.hakeem.hera.web.screens.partycontact">
    <data readOnly="true">
        <collection id="partyContactsDc"
                    class="org.hakeem.hera.entity.party.PartyContact">
            <view extends="_local"/>
            <loader id="partyContactsDl">
                <query>
                    <![CDATA[select e from hera_PartyContact e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="partyContactsTable"
            spacing="true">
        <filter id="filter"
                applyTo="partyContactsTable"
                dataLoader="partyContactsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="partyContactsTable"
                    width="100%"
                    dataContainer="partyContactsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="contactType"/>
                <column id="contactNumber"/>
                <column id="isActive"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="partyContactsTable.create"/>
                <button id="editBtn" action="partyContactsTable.edit"/>
                <button id="removeBtn" action="partyContactsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
