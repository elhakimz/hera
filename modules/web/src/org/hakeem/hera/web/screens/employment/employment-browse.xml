<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://employmentBrowse.caption"
        focusComponent="employmentsTable"
        messagesPack="org.hakeem.hera.web.screens.employment">
    <data readOnly="true">
        <collection id="employmentsDc"
                    class="org.hakeem.hera.entity.hr.Employment">
            <view extends="_local">
                <property name="fromPartyRole" view="_minimal"/>
                <property name="toPartyRole" view="_minimal"/>
            </view>
            <loader id="employmentsDl">
                <query>
                    <![CDATA[select e from hera_Employment e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="employmentsTable"
            spacing="true">
        <filter id="filter"
                applyTo="employmentsTable"
                dataLoader="employmentsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="employmentsTable"
                    width="100%"
                    dataContainer="employmentsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="fromPartyRole"/>
                <column id="toPartyRole"/>
                <column id="fromDate"/>
                <column id="thruDate"/>
                <column id="name"/>
                <column id="description"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="employmentsTable.create"/>
                <button id="editBtn" action="employmentsTable.edit"/>
                <button id="removeBtn" action="employmentsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
