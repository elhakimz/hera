<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
        <instance id="personDc"
                  class="org.hakeem.hera.entity.party.Person"
                   provided="true" >
            <view extends="_minimal">
                <property name="photoImage" view="_minimal"/>
                <property name="otherInfo"/>
                <property name="addresses" view="partyAddress-view"/>
                <property name="gender"/>
            </view>
            <loader/>
        </instance>
    </data>
    <layout >
        <groupBox stylename="light" caption="Personal Data">
            <hbox spacing="true">
                <image dataContainer="personDc" property="photoImage" width="150px"  height="150px" scaleMode="SCALE_DOWN" css="border:1px solid #efefef"/>
                <form editable="false" dataContainer="personDc">
                    <column>
                        <label id="nameField" property="name" stylename="h2"/>
                        <label property="gender" />
                        <label property="age" />
                        <label property="otherInfo"/>
                        <!--                <textField id="birthDateField" property="birthDate"/>-->
                        <!--                <textField id="genderField" property="gender"/>-->
                    </column>
                </form>
            </hbox>
        </groupBox>

    </layout>
</fragment>

