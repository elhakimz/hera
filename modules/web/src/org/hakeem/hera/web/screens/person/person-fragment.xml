<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
        <instance id="personDc"
                  class="org.hakeem.hera.entity.party.Person"
                  view="person-view" provided="true" >
            <loader/>
        </instance>
    </data>
    <layout >
        <groupBox stylename="light" caption="Personal Data">
            <form editable="false" dataContainer="personDc">
                <column>
                    <label id="nameField" property="name" stylename="h2"/>
                    <label property="gender" />
                    <label property="age" />
                    <!--                <textField id="birthDateField" property="birthDate"/>-->
                    <!--                <textField id="genderField" property="gender"/>-->
                </column>
            </form>

        </groupBox>

    </layout>
</fragment>

