<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://positionResponsibilityEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.positionresponsibility">
    <data>
        <instance id="positionResponsibilityDc"
                  class="org.hakeem.hera.entity.hr.PositionResponsibility">
            <view extends="positionResponsibility-view"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="positionResponsibilityDc">
            <column width="350px">
                <pickerField id="positionField" property="position">
                    <actions>
                        <action id="lookup" type="picker_lookup">
                            <properties>
                                <property name="openMode" value="DIALOG"/>
                            </properties>
                        </action>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <dateField id="fromDateField" property="fromDate"/>
                <dateField id="thruDateField" property="thruDate"/>
                <textField id="noteField" property="note"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
