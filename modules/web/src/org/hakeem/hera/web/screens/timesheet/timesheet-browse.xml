<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://timesheetBrowse.caption"
        focusComponent="table"
        messagesPack="org.hakeem.hera.web.screens.timesheet">
    <data>
        <collection id="timesheetsDc"
                    class="org.hakeem.hera.entity.timesheet.Timesheet">
            <view extends="_local">
                <property name="employee" view="_minimal"/>
                <property name="name"/>
            </view>

            <loader id="timesheetsDl">
                <query>
                    <![CDATA[select e from hera_Timesheet e]]>
                </query>
            </loader>
        </collection>
        <instance id="timesheetDc"
                  class="org.hakeem.hera.entity.timesheet.Timesheet">
            <view extends="timesheet-view"/>
            <loader/>
            <collection id="timeEntryDc" property="timeEntries" >
            </collection>
        </instance>


    </data>
    <actions>
        <action id="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600" width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter" applyTo="table" dataLoader="timesheetsDl">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%"
                            dataContainer="timesheetsDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="employee"/>
                        <column id="fromDate"/>
                        <column id="thruDate"/>
                        <column id="note"/>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="removeBtn" action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="fieldGroupBox" spacing="true">
                <scrollBox id="fieldGroupBox">
                    <vbox spacing="true">
                        <form id="form" dataContainer="timesheetDc">
                            <column width="350px">
                                <pickerField id="employeeField" property="employee">
                                    <actions>
                                        <action id="lookup" type="picker_lookup"/>
                                        <action id="clear" type="picker_clear"/>
                                    </actions>
                                </pickerField>
                                <dateField id="fromDateField" property="fromDate"/>
                                <dateField id="thruDateField" property="thruDate"/>
                                <textField id="noteField" property="note"/>
                            </column>
                        </form>
                        <groupBox caption="Entries">
                            <table id="timeEntriesTable" dataContainer="timeEntryDc" width="100%" height="200px" editable="true" enable="false">
                                <actions>
                                    <action id="create" type="create">
                                        <properties>
                                            <property name="openMode" value="DIALOG"/>
                                        </properties>
                                    </action>
                                    <action id="edit" type="edit"/>
                                    <action id="remove" type="remove"/>
                                </actions>
                                <columns>
                                    <column id="fromDateTime" editable="true"/>
                                    <column id="hours" editable="true"/>
                                    <column id="note" editable="true"/>
                                </columns>
                                <rows/>
                                <buttonsPanel>
                                    <button action="timeEntriesTable.create"/>
                                    <button action="timeEntriesTable.edit"/>
                                    <button action="timeEntriesTable.remove"/>
                                </buttonsPanel>
                            </table>
                        </groupBox>
                    </vbox>

                </scrollBox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
