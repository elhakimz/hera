<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://personApplicantEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.person">
    <data>
        <instance id="personDc"
                  class="org.hakeem.hera.entity.party.Person">
            <view extends="person-view"/>
            <loader/>
            <instance id="photoImageDc" property="photoImage"/>
        </instance>

        <collection id="positionsDc" class="org.hakeem.hera.entity.hr.Position" view="position-min-view">
          <loader>
              <query>
                   select e from hera_Position e
              </query>
          </loader>
        </collection>
        <collection id="questionsDc" class="org.hakeem.hera.entity.common.QuestionaireResult" view="questionaireResult-view"/>
    </data>
    <dialogMode height="AUTO"
                width="640px"
                modal="true"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="personDc">
                <column width="350px">
                    <lookupField id="salutationField" property="salutation"/>
                    <textField id="firstNameField" property="firstName"/>
                    <textField id="middleNameField" property="middleName"/>
                    <textField id="lastNameField" property="lastName"/>
                    <dateField id="birthDateField" property="birthDate"/>
                    <textField id="birthPlaceField" property="birthPlace"/>
                    <lookupField id="genderField" property="gender"/>
                    <lookupField id="religionTypeField" property="religionType"/>
                    <lookupField id="maritalStatusField" property="maritalStatus"/>
                    <upload id="photoImageField" fileStoragePutMode="IMMEDIATE" property="photoImage"
                            showFileName="true"/>
                </column>
            </form>
            <groupBox spacing="true" caption="Pertanyaan" width="100%"  stylename="borderless" height="250px" expand="vbox1">
                <vbox id="vbox1" spacing="true" expand="questionTable"  margin="true">
                    <hbox><label value="Untuk Jabatan"/><lookupField id="positionWantedField" optionsContainer="positionsDc" width="100%" height="100%"/></hbox>
                    <table dataContainer="questionsDc" id="questionTable" editable="true" stylename="no-vertical-lines borderless" width="100%" height="100%">
                        <columns>
                            <column id="questionaireItem"  editable="false"/>
                        </columns>
                        <rows/>
                    </table>
                </vbox>
            </groupBox>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="btnCommitAndClose" caption="Create Applicant" stylename="primary" />
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
