<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://questionaireItemEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.questionaireitem">
    <data>
        <instance id="questionaireItemDc"
                  class="org.hakeem.hera.entity.common.QuestionaireItem">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="questionaireItemDc">
            <column width="350px">
                <textField id="questionField" property="question"/>
                <textField id="langCodeField" property="langCode"/>
                <textField id="answerField" property="answer"/>
                <lookupField id="questionTypeField" property="questionType"/>
                <textField id="weightField" property="weight"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
