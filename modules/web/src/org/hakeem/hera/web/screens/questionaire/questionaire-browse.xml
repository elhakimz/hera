<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://questionaireBrowse.caption"
        focusComponent="questionairesTable"
        messagesPack="org.hakeem.hera.web.screens.questionaire">
    <data readOnly="true">
        <collection id="questionairesDc"
                    class="org.hakeem.hera.entity.common.Questionaire">
            <view extends="_local">
                <property name="questionaireType" view="_minimal"/>
                <property name="maker" view="_minimal"/>
            </view>
            <loader id="questionairesDl">
                <query>
                    <![CDATA[select e from hera_Questionaire e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="questionairesTable"
            spacing="true">
        <filter id="filter"
                applyTo="questionairesTable"
                dataLoader="questionairesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="questionairesTable"
                    width="100%"
                    dataContainer="questionairesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="questionaireType"/>
                <column id="fromDate"/>
                <column id="name"/>
                <column id="description"/>
                <column id="maker"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="questionairesTable.create"/>
                <button id="editBtn" action="questionairesTable.edit"/>
                <button id="removeBtn" action="questionairesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
