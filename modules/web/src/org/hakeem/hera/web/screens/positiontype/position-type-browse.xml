<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://positionTypeBrowse.caption"
        focusComponent="positionTypesTable"
        messagesPack="org.hakeem.hera.web.screens.positiontype">
    <data readOnly="true">
        <collection id="positionTypesDc"
                    class="org.hakeem.hera.entity.hr.PositionType">
            <view extends="_local">
                <property name="company" view="_minimal"/>

            </view>
            <loader id="positionTypesDl">
                <query>
                    <![CDATA[select e from hera_PositionType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="positionTypesTable"
            spacing="true">
        <filter id="filter"
                applyTo="positionTypesTable"
                dataLoader="positionTypesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="positionTypesTable"
                    width="100%"
                    dataContainer="positionTypesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="code"/>
                <column id="description"/>
                <column id="benefitPercent"/>
                <column id="company"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="positionTypesTable.create"/>
                <button id="editBtn" action="positionTypesTable.edit"/>
                <button id="removeBtn" action="positionTypesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
