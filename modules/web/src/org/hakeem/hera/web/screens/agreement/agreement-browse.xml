<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://agreementBrowse.caption"
        focusComponent="agreementsTable"
        messagesPack="org.hakeem.hera.web.screens.agreement">
    <data readOnly="true">
        <collection id="agreementsDc"
                    class="org.hakeem.hera.entity.agreement.Agreement">
            <view extends="_local"/>
            <loader id="agreementsDl">
                <query>
                    <![CDATA[select e from hera_Agreement e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="agreementsTable"
            spacing="true">
        <filter id="filter"
                applyTo="agreementsTable"
                dataLoader="agreementsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="agreementsTable"
                    width="100%"
                    dataContainer="agreementsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="code"/>
                <column id="agreementDate"/>
                <column id="fromDate"/>
                <column id="thruDate"/>
                <column id="description"/>
                <column id="agreementType"/>
                <column id="textual"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="agreementsTable.create"/>
                <button id="editBtn" action="agreementsTable.edit"/>
                <button id="removeBtn" action="agreementsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
