<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://communicationEventPurposeBrowse.caption"
        focusComponent="communicationEventPurposesTable"
        messagesPack="org.hakeem.hera.web.screens.communicationeventpurpose">
    <data readOnly="true">
        <collection id="communicationEventPurposesDc"
                    class="org.hakeem.hera.entity.commevent.CommunicationEventPurpose">
            <view extends="_local">
                <property name="communicationEventPurposeType" view="_minimal"/>
            </view>
            <loader id="communicationEventPurposesDl">
                <query>
                    <![CDATA[select e from hera_CommunicationEventPurpose e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="communicationEventPurposesTable"
            spacing="true">
        <filter id="filter"
                applyTo="communicationEventPurposesTable"
                dataLoader="communicationEventPurposesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="communicationEventPurposesTable"
                    width="100%"
                    dataContainer="communicationEventPurposesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="description"/>
                <column id="communicationEventPurposeType"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="communicationEventPurposesTable.create"/>
                <button id="editBtn" action="communicationEventPurposesTable.edit"/>
                <button id="removeBtn" action="communicationEventPurposesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
