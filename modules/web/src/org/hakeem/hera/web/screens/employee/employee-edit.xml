<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://employeeEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.employee">
    <data>
        <instance id="employeeDc"
                  class="org.hakeem.hera.entity.hr.Employee">
            <view extends="employee-view"/>
            <loader/>
        </instance>

        <instance id="personDc" class="org.hakeem.hera.entity.party.Person">
            <loader id="personDl">
            </loader>
        </instance>



    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <hbox spacing="true">
        <form id="form" dataContainer="employeeDc">
            <column width="350px">
                <pickerField id="partyField" property="party"  >
                    <actions >
                        <action id="lookup" type="picker_lookup"   >
                           <properties>
                               <property name="openMode" value="DIALOG"/>
                           </properties>
                        </action>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <dateField id="fromDateField" property="fromDate"/>
                <dateField id="thruDateField" property="thruDate"/>
                <textField id="empCodeField" property="empCode"/>
            </column>
        </form>
            <fragment screen="hera_PersonFragment"/>
        </hbox>

        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
