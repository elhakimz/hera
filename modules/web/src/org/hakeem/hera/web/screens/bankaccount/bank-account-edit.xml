<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://bankAccountEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.bankaccount">
    <data>
        <instance id="bankAccountDc"
                  class="org.hakeem.hera.entity.finance.BankAccount">
            <view extends="bankAccount-view">
                <property name="accountNumbers" view="_minimal"/>
                <property name="currency" view="_minimal"/>
            </view>
            <loader/>

        </instance>
        <collection id="currencyDc" class="org.hakeem.hera.entity.finance.Currency">
            <loader>
                <query>select e from hera_Currency e</query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="bankAccountDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <pickerField id="partyField" property="party">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="bankField" property="bank">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <lookupField id="currencyField" property="currency" optionsContainer="currencyDc"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
