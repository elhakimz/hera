<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://communicationEventBrowse.caption"
        focusComponent="communicationEventsTable"
        messagesPack="org.hakeem.hera.web.screens.communicationevent">
    <data readOnly="true">
        <collection id="communicationEventsDc"
                    class="org.hakeem.hera.entity.commevent.CommunicationEvent">
            <view extends="_local">
                <property name="partyRelationship" view="_minimal"/>
                <property name="contactMechanismType" view="_minimal"/>
            </view>
            <loader id="communicationEventsDl">
                <query>
                    <![CDATA[select e from hera_CommunicationEvent e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="communicationEventsTable"
            spacing="true">
        <filter id="filter"
                applyTo="communicationEventsTable"
                dataLoader="communicationEventsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="communicationEventsTable"
                    width="100%"
                    dataContainer="communicationEventsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="fromDate"/>
                <column id="toDate"/>
                <column id="note"/>
                <column id="partyRelationship"/>
                <column id="communicationEventStatusType"/>
                <column id="contactMechanismType"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="communicationEventsTable.create"/>
                <button id="editBtn" action="communicationEventsTable.edit"/>
                <button id="removeBtn" action="communicationEventsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
