<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://communicationEventPurposeEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.communicationeventpurpose">
    <data>
        <instance id="communicationEventPurposeDc"
                  class="org.hakeem.hera.entity.commevent.CommunicationEventPurpose">
            <view extends="_local">
                <property name="communicationEventPurposeType" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="communicationEventPurposeDc">
            <column width="350px">
                <textField id="descriptionField" property="description"/>
                <pickerField id="communicationEventPurposeTypeField" property="communicationEventPurposeType">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
