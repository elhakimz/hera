<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://partyContactEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.partycontact">
    <data>
        <instance id="partyContactDc"
                  class="org.hakeem.hera.entity.party.PartyContact">
            <view extends="partyContact-view"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="partyContactDc">
            <column width="350px">
                <lookupField id="contactTypeField" property="contactType"/>
                <textField id="contactNumberField" property="contactNumber"/>
                <checkBox id="isActiveField" property="isActive"/>
                <pickerField id="partyField" property="party">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
