<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://partyIdentifierEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.partyidentifier">
    <data>
        <instance id="partyIdentifierDc"
                  class="org.hakeem.hera.entity.party.PartyIdentifier">
            <view extends="_local">
                <property name="party" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="partyIdentifierDc">
            <column width="350px">
                <lookupField id="identTypeField" property="identType"/>
                <textField id="identNumberField" property="identNumber"/>
                <dateField id="fromDateField" property="fromDate"/>
                <dateField id="thruDateField" property="thruDate"/>
                <pickerField id="partyField" property="party">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
