<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://rankTypeBrowse.caption"
        focusComponent="rankTypesTable"
        messagesPack="org.hakeem.hera.web.screens.ranktype">
    <data >
        <collection id="rankTypesDc"
                    class="org.hakeem.hera.entity.hr.RankType">
            <view extends="_local"/>
            <loader id="rankTypesDl">
                <query>
                    <![CDATA[select e from hera_Rank e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="rankTypesTable"
            spacing="true">
        <filter id="filter"
                applyTo="rankTypesTable"
                dataLoader="rankTypesDl">
            <properties include=".*"/>
        </filter>
        <table id="rankTypesTable"
                    width="100%"
                    dataContainer="rankTypesDc" editable="true">
            <actions>
                <action id="create" type="create" shortcut="CTRL-ALT-N"/>
                <action id="remove" type="remove" shortcut="CTRL-ALT-D"/>
            </actions>
            <columns>
                <column id="name" editable="true"/>
                <column id="description" editable="true"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="rankTypesTable.create"/>
                <button id="removeBtn" action="rankTypesTable.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
