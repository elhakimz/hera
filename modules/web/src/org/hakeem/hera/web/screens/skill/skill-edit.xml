<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://skillEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.skill">
    <data>
        <instance id="skillDc"
                  class="org.hakeem.hera.entity.qualification.Skill">
            <view extends="_local">
                <property name="person" view="_minimal"/>
                <property name="skillType" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="skillDc">
            <column width="350px">
                <pickerField id="personField" property="person">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="nameField" property="name"/>
                <textField id="descriptionField" property="description"/>
                <textField id="yearsExperienceField" property="yearsExperience"/>
                <lookupField id="skillLevelTypeField" property="skillLevelType"/>
                <pickerField id="skillTypeField" property="skillType">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
