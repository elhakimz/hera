<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://questionaireEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.questionaire">
    <data>
        <instance id="questionaireDc"
                  class="org.hakeem.hera.entity.common.Questionaire">
            <view extends="_local">
                <property name="questionaireType" view="_minimal"/>
                <property name="maker" view="_minimal"/>
                <property name="questionaireItems" view="_local"/>
            </view>
            <loader/>
            <collection id="questionaireItemsDc" property="questionaireItems"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="questionaireDc">
            <column width="350px">
                <pickerField id="questionaireTypeField" property="questionaireType">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <dateField id="fromDateField" property="fromDate"/>
                <dateField id="toDateField" property="toDate"/>
                <textField id="nameField" property="name"/>
                <textArea id="descriptionField" property="description"/>
                <pickerField id="makerField" property="maker">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
            <column>
                <textField id="processStateField" property="processState" editable="false"/>
                <dateField id="processDateField" property="processDate" editable="false"/>
            </column>
        </form>
        <groupBox id="questionaireItemsBox"
                  caption="msg://org.hakeem.hera.entity.common/Questionaire.questionaireItems">
            <table id="questionaireItemsTable" dataContainer="questionaireItemsDc" width="100%" height="200px" >
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="question"/>
                    <column id="langCode"/>
                    <column id="answer"/>
                    <column id="questionType"/>
                    <column id="weight"/>
                </columns>
                <buttonsPanel>
                    <button action="questionaireItemsTable.create"/>
                    <button action="questionaireItemsTable.edit"/>
                    <button action="questionaireItemsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
