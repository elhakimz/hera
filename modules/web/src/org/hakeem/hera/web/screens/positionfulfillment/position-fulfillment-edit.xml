<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://positionFulfillmentEdit.caption"
        focusComponent="form"
        messagesPack="org.hakeem.hera.web.screens.positionfulfillment">
    <data>
        <instance id="positionFulfillmentDc"
                  class="org.hakeem.hera.entity.hr.PositionFulfillment">
            <view extends="positionFulfillment-view"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="positionFulfillmentDc">
            <column width="350px">
                <dateField id="fromDateField" property="fromDate"/>
                <dateField id="thruDateField" property="thruDate"/>
                <textArea id="noteField" property="note" rows="5"/>
                <pickerField id="acceptedByField" property="acceptedBy" icon="USER">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="fulfillmentOfField" property="fulfillmentOf" icon="BOOK">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
