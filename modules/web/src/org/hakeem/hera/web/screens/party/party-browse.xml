<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://partyBrowse.caption"
        focusComponent="partiesTable"
        messagesPack="org.hakeem.hera.web.screens.party">
    <data readOnly="true">
        <collection id="partiesDc"
                    class="org.hakeem.hera.entity.party.Party">
            <view extends="_local"/>
            <loader id="partiesDl">
                <query>
                    <![CDATA[select e from hera_Party e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="partiesTable"
            spacing="true">
        <filter id="filter"
                applyTo="partiesTable"
                dataLoader="partiesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="partiesTable"
                    width="100%"
                    dataContainer="partiesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="partiesTable.create"/>
                <button id="editBtn" action="partiesTable.edit"/>
                <button id="removeBtn" action="partiesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
