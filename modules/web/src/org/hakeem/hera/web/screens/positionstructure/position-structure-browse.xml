<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://positionStructureBrowse.caption"
        focusComponent="positionStructuresTable"
        messagesPack="org.hakeem.hera.web.screens.positionstructure">
    <data readOnly="true">
        <collection id="positionStructuresDc"
                    class="org.hakeem.hera.entity.hr.PositionStructure">
            <view extends="_local">
                <property name="reportTo" view="_minimal">
                    <property name="positionType" view="_minimal"/>
                </property>
                <property name="managedBy" view="_minimal">
                    <property name="positionType" view="_minimal"/>
                </property>
            </view>
            <loader id="positionStructuresDl">
                <query>
                    <![CDATA[select e from hera_PositionStructure e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="positionStructuresTable"
            spacing="true">
        <filter id="filter"
                applyTo="positionStructuresTable"
                dataLoader="positionStructuresDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="positionStructuresTable"
                    width="100%"
                    dataContainer="positionStructuresDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <group>
                    <column id="reportToName" caption="Report To"/>
                </group>
                <column id="managedBy"/>
                <column id="fromDate"/>
                <column id="thruDate"/>
                <column id="isPrimary"/>
                <column id="status"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="positionStructuresTable.create"/>
                <button id="editBtn" action="positionStructuresTable.edit"/>
                <button id="removeBtn" action="positionStructuresTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
